package xyz.sethy.cd;

import net.minecraft.block.Block;
import net.minecraft.client.Minecraft;
import net.minecraftforge.common.MinecraftForge;
import xyz.sethy.cd.gui.WaterGUI;
import xyz.sethy.cd.packet.WaterPacketHandler;

import java.util.logging.Logger;

import cpw.mods.fml.common.Mod;
import cpw.mods.fml.common.Mod.EventHandler;
import cpw.mods.fml.common.event.FMLInitializationEvent;
import cpw.mods.fml.common.network.NetworkMod;

@NetworkMod(clientSideRequired=true, serverSideRequired=false, channels = {"tutchannel"}, packetHandler = WaterPacketHandler.class)
@Mod(modid = Main.MODID, version = Main.VERSION)
public class Main {
    public static final String MODID = "CD - Trial";
    public static final String VERSION = "1.0";
    public static final Logger LOGGER = Logger.getLogger(MODID);    
    
    @EventHandler
    public void init(FMLInitializationEvent event) {
    	MinecraftForge.EVENT_BUS.register(new WaterGUI());
    }
}
